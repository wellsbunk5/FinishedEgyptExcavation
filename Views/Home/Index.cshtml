@{ ViewData["Title"] = "Home Page"; }

<style>
    .navbar {
        margin-bottom: 0rem !important;
    }

    .body-container {
        /*remove the container default padding attribute*/
        padding-left: 0px !important;
        padding-right: 0px !important;
        /*increase width as per your need*/
        max-width: 100vh;
    }

    img {
        width: 100%;
        display: block;
    }

    .hero-image {
        /* Use "linear-gradient" to add a darken background effect to the image. This will make the text easier to read*/
        background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));
        /* Set a specific height */
        height: 50vh;
        /* Position and center the image to scale nicely on all screens */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;

        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
    }

    .hero-image picture {
        height: 100%;
    }

    .hero-image img {
        height: 100%;
        object-fit: cover;
    }

    .hero-image::before {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.3);
    }

    /* Place text in the middle of the image */
    .hero-text {
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
    }

    .hero-text h1 {
        /*font-size: clamp(3rem, 6vw, 6rem);*/
        font-size: 4em;
        letter-spacing: 1px;
        text-shadow: 1px 1px 2px #000;
    }

</style>

<div class="hero-image">
    <picture>
        <source srcset="~/img/Hero.jpg" media="(min-width: 801px)">
        <img src="~/img/Hero.jpg" alt="Fag el-Gamous Landscape">
    </picture>

    <div class="hero-text">
        <h1 id="top">The BYU Egypt Excavation Project</h1>
        <p><em></em></p>
    </div>
</div>

